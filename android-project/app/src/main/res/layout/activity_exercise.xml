<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ExerciseActivity"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <include layout="@layout/toolbar_exercise"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valuex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.17"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/valuey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="48sp" />

            </LinearLayout>

            <!--
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp" />
   -->

            <TextView
                android:id="@+id/inputfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="48sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="?attr/colorPrimary" />



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="4"
                android:orientation="horizontal">

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_01"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="1"
                    android:textColor="@color/white"     android:textSize="28sp"      />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_02"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="2"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_03"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="3"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_04"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="4"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_05"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="5"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_06"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="6"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_07"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="7"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_08"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="8"
                    android:textColor="@color/white"     android:textSize="28sp"    />

                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_09"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="9"
                    android:textColor="@color/white"     android:textSize="28sp"    />


                <osyoos.sofeeg.oukop.SquareButton
                    android:id="@+id/calcbutton_00"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="0"
                    android:textColor="@color/white"     android:textSize="28sp"    />

            </GridLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >


                <Button
                    android:id="@+id/calcbutton_confirm"
                    android:layout_width="145dp"
                    android:layout_height="90dp"

                    android:text="OK"
                    android:onClick="calcbuttonClicked"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/button_normal"

                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />


                <Button
                    android:id="@+id/calcbutton_trash"
                    android:layout_width="145dp"
                    android:layout_height="90dp"
                    android:text="Cancel"
                    android:onClick="calcbuttonClicked"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/button_normal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />



            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
